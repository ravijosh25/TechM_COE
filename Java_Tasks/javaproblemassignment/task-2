const c=4;
function Isprime(num){
    if(num<=2)
        return false
    else{
        for( i=2;i*i<=num;i++){
            if(num%i==0){
                return false;
            }
        }
        return true;
    }
}
console.log(Isprime(c)? "The given is prime":"The given number is not prime");

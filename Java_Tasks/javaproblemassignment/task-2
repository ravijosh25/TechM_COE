/*****************task-9** */
function checkLeapYearAndMonth(year, month) {
    // Check if the year is a leap year
    const isLeapYear = (year % 4 === 0 && (year % 100 !== 0 || year % 400 === 0));

    if (isLeapYear) {
        // If the year is a leap year, check if the month is February
        if (month === 2) {
            console.log("The year is leap year and the month is February with 29 days.");
        } else {
            console.log("The year is leap year and the month is not February.");
        }
    } else {
        console.log("The given year is not a leap year.");
    }
}
checkLeapYearAndMonth(2024, 2); 
checkLeapYearAndMonth(2024, 3); 
checkLeapYearAndMonth(2023, 2); 
